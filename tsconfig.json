{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src"]
}